page, .system-list {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: calc(100% + 300rpx);
  display: flex;
  height:calc(100% - 224rpx);
  position: relative;
  left:-300rpx;
  transition: left 1s;
}
.show {
  left: 0;
}
.content-box {
  position:relative;
  width: calc(100% - 300rpx);
  height: 100%;
  transition: left 1s, top 1s;
  background-color:white;
  overflow:hidden;
}
.system {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  margin: auto;
  height:320rpx;
  text-align: center;
}

.system .about{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.hied {
  border: none !important;
}
