page, .personal-box {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width:100%;
  transition: left 1s, top 1s;
  height:calc(100% - 224rpx);
  border-radius: 0 0 10px 10px;
  position: relative;
}
.content-box {
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height: 100%;
  transition: left 1s, top 1s;
  background-color:white;
  overflow:hidden;
}

