page, .personal-box {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: calc(100% + 300rpx);
  display: flex;
  height:calc(100% - 224rpx);
  position: relative;
  left:-300rpx;
  transition: left 1s;
}
.show {
  left: 0;
}
.content-box {
  position:relative;
  width: calc(100% - 300rpx);
  height: 100%;
  transition: left 1s, top 1s;
  background-color:white;
  overflow:hidden;
}

.Head-portrait {
  padding-top: 90rpx;
  /* background-color: red; */
  text-align: center;
}
.Head-portrait>image {
  width: 250rpx;
  height: 250rpx
}
.personal-from{
  width: 600rpx;
  align-items: center;
  margin-left: 80rpx;
}
.personal-list {
  line-height: 80rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  color: #ccc;
  height: 80rpx;
  border-bottom: 3rpx solid #ccc;
  font-size: 24rpx
}
.personal-list .shu{
  margin-right: 20rpx;
  margin-left: 20rpx;
  display: inline-block;
  width: 3rpx;
  height: 30rpx;
  background-color: #ccc
}
.modify {
  width: 520rpx;
  margin-top: 60rpx;
  margin-right: 50rpx;
  margin-left: 120rpx;
  background-color: #fdc73e;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #fff;
   border-radius:3px;
}
.hied {
  border: none !important;
}
.change-password-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.50);
}
.user-avatar-box {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin:40rpx auto;
  box-shadow:1px 1px 10px 2px rgba(0, 0, 0, 0.2);
}
.user-avatar {
  width: 100%;
  height: 100%;
  display: block;
}


