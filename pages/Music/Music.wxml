<view class='Music-List'>
  <!-- 音乐播放模板 -->
  <import src ="../template/template.wxml"/>
  <view class='content'>
    <template is="switch" data="{{flag, style}}"/>
    <!-- //歌曲列表 -->
    <view class="content-box" style="background: {{style.mainBackground}}">
      <view class='Music-box' catchtouchmove="listTouchmove" catchtouchend="listTouchend">
        <view
          class="Song {{((90 + rotation + index * 30) % 360) < 180 ? 'show-card': ''}}"
          wx:for="{{imgList}}"
          style="transform: rotateX({{rotation + index * 30}}deg) translateZ(160px) rotateX({{-rotation - index * 30}}deg); display: {{(rotation + index * 30) > 30 ? none: flex}}" wx:key="{{index}}" >
          <view class='Music-logo'>
            <image src='{{serve + item.image}}'></image>
          </view>
          <view class='Song-name' bindtap="SongJump" >
            {{item.name}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 播放器 -->
  <template is="Playback" data="{{isPlaying, totalProcess, sliderValue, player, currentTime, totalTime, musicName, style, isListLoop}}"/>
</view>