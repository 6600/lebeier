
<view class='Music-List'>
  <!-- 音乐播放模板 -->
  <import src ="../template/template.wxml"/>
  <template wx:if="{{showLogin}}" is="login" />
  <view wx:else class="content {{musicListHasData ? '' : 'max'}} {{isPlaying || musicListHasData ? '' : 'open'}}">
    <template is="switch" data="{{flag, style}}"/>
    <!-- //歌曲列表 -->
    <view class="content-box">
      <scroll-view scroll-y class="Music-box">
        <view class="song-box" style="height: {{imgList.length * 180}}rpx;">
          <view
            class="Song"
            wx:for="{{imgList}}"
            wx:key="{{index}}"
            bindtap="SongJump"
            style="background: url('{{serve + item.image}}')"
            >
            <view class='Song-name' data-id="{{item.id}}" data-name="{{item.name}}" >
              {{item.name}}
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
  <!-- 播放器 -->
  <template is="Playback" data="{{isPlaying, totalProcess, sliderValue, player, currentTime, totalTime, musicName, style, isListLoop, musicListHasData}}"/>
</view>