
page, .Music-List {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: calc(100% + 300rpx);
  display: flex;
  height:calc(100% - 224rpx);
  position: relative;
  left:-300rpx;
  transition: left 1s;
}
.show {
  left: 0;
}
.Music-box {
  width: 100%;
  height: 100%;
  position: relative;
  animation: rotar 15s infinite linear;
  transform-style: preserve-3d;
  perspective: 1810rpx;
  backface-visibility: hidden;
}
.content-box {
  width: calc(100% - 300rpx);
  height: 100%;
  overflow:hidden;
}

.Music-List .Song {
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
	position: absolute;
  top:0;
  right:0;
  margin:auto;
  bottom:0;
  left:0;
  width: 600rpx;
  display: none;
  /* 单面可见 */
  backface-visibility:hidden;
}
.Music-List .show-card {
  display: flex;
}
.Music-List .Song .Music-logo {
  width: 150rpx;
  height: 110rpx;
  margin-right: 10rpx;
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow:1px 1px 10px 2px rgba(0, 0, 0, 0.2);
}
.Music-logo image {
  width: 100%;
  height: 100%;
}
.Music-List .Song .Song-name {
  width:440rpx;
  height:110rpx;
  background-color:white;
  border-radius:14rpx;
  overflow:hidden;
  box-shadow:1px 1px 10px 2px rgba(0, 0, 0, 0.2);
}
