.Music-List {
  position: relative;
  overflow: hidden;
  width: 100%;
  
} 
.Music-box {
  padding-top: 150rpx;
  padding-bottom:  224rpx;
  transform-style: preserve-3d;
}
.Music-List .Song {
  padding-left: 79rpx;
  padding-right: 60rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  margin-bottom: 40rpx;
  margin: 20rpx auto;
  transform: rotateX(60deg) translateY(60px);
} 
.Music-List .Song .Music-logo {
  float: left;
  width: 150rpx;
  height: 110rpx;
  margin-right: 10rpx;
  background-color: red;
   border-radius:4rpx;
}
.Music-List .Song .Song-name {
  float: right;
  width: 440rpx;
  height: 110rpx;
  background-color: pink;
  border-radius:4rpx;
}
