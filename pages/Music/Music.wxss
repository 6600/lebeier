.Music-List {
  position: relative;
  overflow: hidden;
  width: 100%;
  
} 
.Music-box {
  top: 10px;
  width: 100%;
  height: 400px;
  animation: rotar 15s infinite linear;
  transform-style: preserve-3d;
}
.Music-List .Song {
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
	position: absolute;
  top:0;
  right:0;
  margin:auto;
  bottom:0;
  left:0;
  width: 600rpx;
  display: flex;
} 
.Music-List .Song .Music-logo {
  width: 150rpx;
  height: 110rpx;
  margin-right: 10rpx;
  background-color: white;
  border-radius: 5rpx;
  overflow: hidden;
  box-shadow: 1px 1px 10px 0px #000;
}
.Music-List .Song .Song-name {
  width: 440rpx;
  height: 110rpx;
  background-color: white;
  border-radius:4rpx;
  overflow: hidden;
  box-shadow: 1px 1px 10px 0px #000;
}
