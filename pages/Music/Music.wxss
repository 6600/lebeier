
page {
  background:url('http://puge.oss-cn-beijing.aliyuncs.com/lebeier/back.png') no-repeat center center;
  background-size:218px 164px;
  /* background-color:#eeeeee; */
}
page, .Music-List {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: 100%;
  height:calc(100% - 224rpx);
  position: relative;
  transition: height 1s;
}
.Music-box {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: auto;
}
.content-box {
  width: 100%;
  height: 100%;
  overflow:hidden;
}
.song-box {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  max-height:calc(100% - 220rpx);
  overflow:hidden;
}
.open {
  height: 100%;
}
.Music-List .Song {
  height: 130rpx;
  line-height: 130rpx;
  width: 600rpx;
  border-radius:5px;
  margin:10px auto;
  text-align: center;
  overflow:hidden;
  box-shadow:1px 1px 10px 2px rgba(0, 0, 0, 0.2);
  /* 单面可见 */
}
.Music-List .Song .Music-logo {
  width: 150rpx;
  height: 120rpx;
  margin-right: 10rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.Music-List .Song .Song-name {
  width: 100%;
  height: 100%;
  color: white;
  background-color: rgba(0, 0, 0, 0.50);
}
