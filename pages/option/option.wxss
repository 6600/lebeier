page {
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: calc(100% + 300rpx);
  display: flex;
  height:calc(100% - 224rpx);
  position: relative;
  left:-300rpx;
  transition: left 1s;
}
.show {
  left: 0;
}
.option {
  width: calc(100% - 300rpx);
  height: 100%;
  position: relative;
  overflow: hidden;
}
.Four-seasons {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 700rpx;
  height: 860rpx;
}
.option .option-Choice {
  margin: 25rpx;
  width: 300rpx;
  height:380rpx;
  float: left;
  border-radius:4px;

}
.option-Choice>image{
  width: 300rpx;
  height: 390rpx;
}
/* 面包屑 */
.Crumbs {
  float:right;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-right: 50rpx;
}
