
.Playback-box {
  width: 100%;
  height: 224rpx;
  position: fixed;
  bottom:-224rpx;
  background-color:  #fdc73e;
  overflow: hidden;
  border-top-left-radius:15rpx;
  border-top-right-radius:15rpx;
  transition: bottom 0.5s;
}
.play {
  bottom: 0;
}
.Black-gum {
  position: absolute;
  top: 40rpx;
  left: 20rpx;
}
.Black-gum>image {
  width: 166rpx;
  height:166rpx;
}
.suspend {
  position: absolute;
  top:108rpx;
  left:405rpx;
  margin-left: -15px;
}
.suspend>image {
  width: 40px;
  height: 40px;
}
.First {
  position: absolute;
  left: 240rpx;
  top: 123rpx;
}
.First>image {
  width: 31px;
  height: 31px;
}
.lower {
  position: absolute;
  top:123rpx;
  left:510rpx;
}
.lower>image {
  width: 31px;
  height: 31px;
}
.loop {
  position: absolute;
  top:123rpx;
  right:40rpx;
}
.loop>image {
  width: 31px;
  height: 31px;
}
.Progress {
  width:calc(100% - 160rpx);
}
.Progress .Playback-bar {
  width: 10%;
  height: 4rpx;
  background-color: #000;
}
.Progress .circular {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius:15rpx;
  background-color: #000;
  top:-8rpx;
  left: 27rpx;
}
.drag-bar {
  width:calc(100% - 250rpx);
  height:40rpx;
  position:absolute;
  left:100px;
  top:40rpx;
  display:flex;
}
.drag-bar .time {
  width: 80rpx;
  font-size: 20rpx;
  line-height:38px;
  text-align: center;
}
.menu {
  width: 100%;
  height: 0;
  display: flex;
  z-index:999;
  line-height: 40px;
  transition: height 1s;
  background-color: white;
  border-radius:0 3px 3px 0;
  overflow:hidden;
}
.active {
  height:40px;
}
.music-name {
  position:absolute;
  top:17rpx;
  left:239rpx;
  color:#333333;
  font-size:12px;
}

/* 切换 */
 .menu-img {
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  top: 15rpx;
  left: 20rpx;
  z-index: 999;
  transition: top 1s;
}
.drop {
  top: 55px;
}
/* 首次修改密码 */
button::after {
  border: none;
}
.first{
  position: absolute;
  width: 96%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 500rpx;
  border-radius:3px;
  overflow:hidden;
}
.first .first-tilte{
  height: 100rpx;
  background-color: #eeeeee;
  font-size: 20px;
  text-align: center;
  line-height: 100rpx;
  color: 5E5E5E;
}
.first .firstn-form {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 100rpx;
  display:flex;
  border-bottom:1px solid #ccc;
}
.first .Title {
  border-right:1px solid #ccc;
  padding:0 5px;
  margin:10px 0;
  line-height:60rpx;
  width: 130rpx;
  font-size: 13px;
  color: #5E5E5E;
}
.first .first-box {
  float: right;
  height: 100rpx;
  line-height:100rpx;
  margin:0 10px;
  width:calc(100% - 240rpx);
  font-size: 16px;
}
.first .first-box input {
  width:100%;
  height:100%;
  line-height:100rpx;
  font-size: 12px;
}
.first .bottom-bar {
  width: 100%;
  height: 45px;
  text-align: center;
  font-size: 20px;
  display:flex;
  color: #5E5E5E;
  border-radius:0 0 3px 3px;
  overflow:hidden;
}
.first .confirm {
  width: 50%;
  height: 100%;
  line-height: 45px;
  border-radius:0;
  background-color:#ffc833; 
}
.first .cancel {
  width: 50%;
  height: 100%;
  line-height: 45px;
  border-radius:0;
}
.menu .home {
  margin: 1px 0;
}
.menu-option {
  display: flex;
  text-align: center;
  background-color:#666666;
  width:calc(33.33% - 1px);
  color:white;
  justify-content:center;
  font-size:14px;
  margin: 1px;
}
.menu-option image {
  width: 24px;
  height: 24px;
  margin:8px;
}
.login-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: white;
}
.login-box image {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 100px;
  height: 100px;
}
.return {
  line-height: 180rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top:1px solid #afafaf;
}
.return text {
  margin: 0 10px;
}

@keyframes rotatefresh {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
    transition-duration: 0.6s;
    transition: 0.6s;
  }
}
.play .Black-gum image {
  animation: 3s rotatefresh infinite;
}

.title-bar {
  text-align: right;
  height:80rpx;
  line-height: 80rpx;
  width:calc(100% - 20px);
  display:flex;
  color: #3a3a3a;
  font-weight:bold;
  font-size:12px;
  justify-content: flex-end;
  margin:0 10px;
}
.title-bar .division {
  margin: 0 5px;
}

