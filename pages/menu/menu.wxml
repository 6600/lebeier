<!-- 音乐播放模板 -->
<import src ="../template/template.wxml"/>
<template wx:if="{{showLogin}}" is="login" />
<view wx:else class="content {{flag? '':'show'}}">
  <template is="switch"  data="{{flag, style}}"/>
  <view class='player-box'>
    <view class='player-list' wx:for="{{cardList}}" wx:key="{{index}}">
      <view class='list-one' data-id='{{item.id}}' catchtap="ClickUnfold" >
        <span data-id='{{item.id}}'>{{item.name}}</span>
        <image data-id='{{item.id}}' src='/image/index/zuo.png' class="{{Open ? 'open' : ''}}"></image>
      </view>
      <view class='Song list' wx:for="{{musicList[item.id]}}" wx:key="{{item.id}}" wx:if="{{musicList[item.id]}}">
        <view class='song-name'catchtap="playshow">
          <text>{{item.name}}</text>
          <image src='/image/index/weixuan.png' wx:if="{{!Select}}"></image>
          <image src='/image/index/xanzhong.png' wx:if="{{Select}}"></image>
        </view>
          <view class='Play-btn'wx:if="{{ButtonBisplay}}">
            <view class='Playback-btn' catchtap='playbtn'>播放</view>
            时间
          </view>
      </view>
    </view>
  </view>
</view>

<!-- 播放器 -->
<template is="Playback" data="{{isPlaying, totalProcess, sliderValue, player, currentTime, totalTime, musicName, style, isListLoop}}"/>