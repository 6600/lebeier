page {
  width: 100%;
  height: 100%;
}
.content {
  overflow: hidden;
  width: calc(100% + 300rpx);
  display: flex;
  height:calc(100% - 224rpx);
  position: relative;
  left:-300rpx;
  transition: left 1s;
}
.show {
  left: 0;
}
.stage {
  width: calc(100% - 300rpx);
  height: 100%;
  position: relative;
  background-color:white;
}
.stage-class {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 580rpx;
  height: 810rpx;
}
.stage-class .stage-content {
  margin-bottom: 30rpx; 
  text-align: center;
  line-height: 30rpx;
}
.stage-content>image{
  width: 580rpx;
  height:240rpx; 
}
/* 面包屑 */
.Crumbs {
  float:right;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-right: 50rpx;
}
